    <script>
        $(window).on("load", function () {
           $("a[href^='http']").attr('target','_blank');
        });

        $(document).ready(function() {
           $('*').delegate('a[href^="http"]', 'click', function(e) {
               e.preventDefault();
               var url = this.href;
               var text = this.text;

               var xhr = new XMLHttpRequest();
               xhr.open('POST', 'http://localhost:3000/tool/track', true); //CHANGE THIS LATER
               xhr.setRequestHeader('Content-type', 'application/x-www-form-urlencoded');
               xhr.onload = function () {console.log("Request done"); window.open(url, '_blank');};

               console.log(e.delegateTarget.id);
               console.log(url + " " + text);
               switch (e.delegateTarget.id){
                   case "tdescription":{
                       var data = 'page='+window.location.href+'&url_clicked='+url+'&value='+text+'&type=ontology';
                       console.log(data);
                       xhr.send(data);
                   }
               }
               return false;
            });
        });

    </script>
    <script>
        BD2K.ready(function () {
            var resource = <%-JSON.stringify(resource)%>;

            new Info(resource);
            $('[data-toggle="tooltip"]').tooltip();
            //var searchViewModel = new BD2K.Resource.SearchViewModel({});

            $('.tag button').click(function (eventObj) {
                var caller = $(this);
                var tag = caller.text().trim();

                var obj = {};
                var stringify = {};

                var searchFilters = {};
                searchFilters["tags"] = tag;

                stringify.sub = false;
                stringify.searchFilters = searchFilters;
                stringify.strict = {};
                stringify.page = 1;
                stringify.perPage = 10;
                obj.input = JSON.stringify(stringify);
                BD2K.request("/resource/search", obj, "GET");
            });

        });


    </script>
